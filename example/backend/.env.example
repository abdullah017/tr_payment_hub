# TR Payment Hub - Backend Configuration
# Copy this file to .env and fill in your credentials

# Server
PORT=3000

# ============================================
# IYZICO CONFIGURATION
# Get credentials from: https://merchant.iyzipay.com
# ============================================
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_SANDBOX=true
IYZICO_CALLBACK_URL=http://localhost:3000/api/payment/callback/iyzico

# ============================================
# PAYTR CONFIGURATION
# Get credentials from: https://www.paytr.com/magaza/destek
# ============================================
PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt
PAYTR_CALLBACK_URL=http://localhost:3000/api/payment/callback/paytr

# ============================================
# SIPAY CONFIGURATION
# Get credentials from: https://merchant.sipay.com.tr
# ============================================
SIPAY_MERCHANT_ID=your_sipay_merchant_id
SIPAY_API_KEY=your_sipay_api_key
SIPAY_SECRET_KEY=your_sipay_secret_key
SIPAY_MERCHANT_KEY=your_sipay_merchant_key
SIPAY_SANDBOX=true
SIPAY_CALLBACK_URL=http://localhost:3000/api/payment/callback/sipay

# ============================================
# PARAM CONFIGURATION
# Get credentials from: https://dev.param.com.tr
# ============================================
PARAM_CLIENT_CODE=your_param_client_code
PARAM_GUID=your_param_guid
PARAM_SANDBOX=true
